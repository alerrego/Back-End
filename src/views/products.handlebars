<div class="products-page">
    <div class="user-information">
        <p>Welcome: {{user.last_name}}</h2>
        <p>Email: {{user.email}}</p>
        <p>Age: {{user.age}}</p>
        <p>Role: {{user.role}}</p>
        <br>
        <div class="buttons-redirection-products">
                <a href="/login" id="logOut" class="logOutBtn">LogOut</a>
                {{#unless isAdmin}}
                <a href="/cart/{{user.cartID}}" class="cartBtn">Cart</a>
                {{else}}
                <a href="/adminpanel" class="adminBtn">Admin</a>
                {{/unless}}
        </div>
    </div>
    <p class="products-list-text">Products list: </p>
    <br>
    <div class="products-cards">
        {{#each this.docs}}
    <div class="card">
        <div class="card-image">
            <img src={{this.thumbnails}} alt="image of product">
        </div>
        <div class="card-text">
            <h3>{{this.title}}</h3>
            <p>Descripcion: {{this.description}}</p>
            <p>Codigo: {{this.code}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Categoria: {{this.category}}</p>
            <p>ID: {{this._id}}</p>
        <div class="card-btn">
            <a href="/cart/{{../user.cartID}}/product/{{this._id}}">Add to cart</a>
        </div>
        </div>
    </div>                                            
    {{/each}}
    </div>
    <br>
    <div>
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"><button>Previous page</button></a>
        {{/if}}
    </div>
    <div>
        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"><button>Next page</button></a>
        {{/if}}
    </div>
</div>

<script src="/js/products.js"></script>