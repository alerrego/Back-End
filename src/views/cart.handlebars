<h3 class="cart-title">You see the Cart: {{cID}}</h3>
<p class="products-list-text">Products list: </p>
<div class="products-cards">
        {{#each products}}
    <div class="card">
        <div class="card-image">
            <img src={{this.productID.thumbnails}} alt="image of product">
        </div>
        <div class="card-text">
            <h3>{{this.productID.title}}</h3>
            <p>Descripcion: {{this.productID.description}}</p>
            <p>Codigo: {{this.productID.code}}</p>
            <p>Precio: {{this.productID.price}}</p>
            <p>Stock: {{this.productID.stock}}</p>
            <p>Categoria: {{this.productID.category}}</p>
            <p>ID: {{this._id}}</p>
            <p>Quantity: {{this.quantity}}</p>
        <div class="card-btn">
            <a href="/delete/cart/{{../cID}}/product/{{this.productID._id}}">Delete product</a>
        </div>
        </div>
    </div>                                            
    {{/each}}
</div>
<div class="return-products">
    <a href="/products" class="return-btn">Return to products</a>
    <a href="/purchase/{{cID}}" class="purchase-btn">Purchase</a>
</div>
